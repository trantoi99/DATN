
@{

    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="py-5">
    <div class="row">
        <h3>UserName : @Session["Account"] </h3>
    </div>
    <div class="row">
        @Html.ActionLink("Giỏ Hàng", "Cart", "Cart", null, new { @class = "" })
    </div>
    <div class="row">
        @foreach (var listPro in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <img src="~/Photos/Admin/Product/@listPro.ImageURL"
                                 alt="@listPro.ProductName"
                                 class="img-fluid" />
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">@listPro.ProductName</h5>
                                <p class="card-text">
                                    @listPro.Detail
                                </p>
                                <p class="card-text">
                                    Số Lượng : @listPro.Amount
                                </p>
                                @Html.ActionLink("Xem Chi Tiết", "ProductDetail", new { id = listPro.ProductID }, null)
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>

       